def roulette(betValue, bet):
  num = random.randint(0,38);

def errorInput(betValue, tempBet, betOption1, betOption2):
  if betValue < 0 or betValue > money:
    return "Bet value invalid. Try Again"
  
  if tempBet != betOption1 or tempBet != betOption2:
    return "Invalid bet. Try Again"

  return ""

