import random

money = 100

#Write your game of chance functions here
def flipping(betValue, bet):
  global money
  tempBet = bet.lower()

  check = errorInput(betValue,tempBet, "heads", "tails")
  if not check:
    return check
 
  coin = random.randint(0,1)
  gain = betValue * 2
  loss = betValue*-1
   

  if tempBet == "heads":
    if coin:
      money += gain
      return "HEADS! You win " + str(gain)
      
    else:  
      money += loss
      return "TAILS! You lose " + str(loss)
      
  elif tempBet == "tails":
    if coin:
      money += loss
      return "HEADS! You lose " + str(loss)
      
    else:
      money += gain
      return "TAILS! You win " + str(gain)
      
  
 
def choHan(betValue, bet):
  tempBet = bet.lower(); 
  check = errorInput(betValue, tempBet, "odd", "even")
  if(not check):
    return check
  dice1 = random.randint(1, 6);
  dice2 = random.randint(1, 6);
  evenSum = True if (dice1 + dice2) % 2 == 0 else False
  
  if tempBet == "odd":
    if evenSum:
      print("The sum of the dice is Even! You lose " + str(betValue));
    else:
      print("The sum of the dice is Odd! You win " + str(2*betValue))

  elif tempBet == "even":
    if evenSum:
      print("The sum of the dice is Even! Congrats! You win " + str(2*betValue))
    else:
      print("The sum of the dice is Odd! money - "+str(betValue))

def cardGame(betValue, bet):
  tempBet = bet.lower()
  check = errorInput(betValue, tempBet, "high", "low")
